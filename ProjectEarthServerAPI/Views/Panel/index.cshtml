@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MC Earth Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-brand">
                <img src="/images/logo/icon.png" alt="MC Earth Logo" class="navbar-logo">
                <span class="h1 mb-0">MC Earth Panel</span>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-map"></i> Interactive Earth Map</h5>
                            <div id="map" style="height: 400px;"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-chart-bar"></i> Statistics</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Live Tappable Count: <span class="badge bg-success">@ViewBag.TappableCount</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Biome Generation: <span class="badge bg-info">@ViewBag.BiomeGeneration</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Generation Radius: <span class="badge bg-warning">@ViewBag.SpawnRadius</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    JSON Adventures Count: <span class="badge bg-primary">@ViewBag.AdventuresCountJson</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Public Adventures Limit: <span class="badge bg-secondary">@ViewBag.PublicAdventuresLimit</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Adventure Spawn Percentage: <span class="badge bg-dark">@ViewBag.AdventureSpawnPercentage%</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Max Tappable Spawn Amount: <span class="badge bg-danger">@ViewBag.MaxTappableSpawnAmount</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Tappable Expiration Time: <span class="badge bg-light text-dark">@ViewBag.TappableExpirationTime</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Max Tappables Per Tile: <span class="badge bg-dark">@ViewBag.MaxTappablesPerTile</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Per Request Max Tappable Spawns In Tile: <span class="badge bg-success">@ViewBag.PerRequestMaxTappableSpawnsInTile</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <!-- Custom JS -->
    <script src="js/app.js"></script>
    <script>
        mostrarTocables();
    </script>
</body>
</html>